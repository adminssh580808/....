#!/bin/bash

clear
RED="\e[0;31m"
GREEN="\e[0;32m"
YELLOW="\e[0;33m"
BLUE="\e[0;34m"
PURPLE="\e[0;35m"
CYAN="\e[0;36m"
LIGHT="\e[0;37m"
NC="\e[0m"

echo -e "  ${YELLOW}======================================================== ${NC}"
echo -e ""
echo -e "  ${YELLOW}------=[${NC} ${RED}AUTO SCRIPT PREMIUM BY SSHINJECTOR.NET${NC} ${YELLOW}]=------ ${NC}"
ISP=$(curl -s ipinfo.io/org | cut -d " " -f 2-10 )
CITY=$(curl -s ipinfo.io/city )
IPVPS=`ifconfig | grep -Eo 'inet (addr:)?([0-9]*\.){3}[0-9]*' | grep -Eo '([0-9]*\.){3}[0-9]*' | grep -v '127.0.0'`;
echo -e "    \e[032;1m ISP NAME:\e[0m ${ISP} "
echo -e "    \e[032;1m CITY:\e[0m ${CITY} "
echo -e "    \e[032;1m IP VPS:\e[0m ${IPVPS} "
echo -e ""
echo -e " ${YELLOW} ----------------=[${NC} ${RED}PANEL XRAY SERVICE${NC} ${YELLOW}]=---------------- ${NC}"
echo -e "    \e[032;1m 1\e[0m\e[037;1m)\e[0m PANEL XRAY VMESS"
echo -e "    \e[032;1m 2\e[0m\e[037;1m)\e[0m PANEL XRAY VLESS"
echo -e "    \e[032;1m 3\e[0m\e[037;1m)\e[0m PANEL XRAY TROJAN"
echo -e "    \e[032;1m 4\e[0m\e[037;1m)\e[0m PANEL XRAY SHADOWSOCK"
echo -e ""
echo -e " ${YELLOW} -------------------=[${NC} ${RED}OPTIONS MENU${NC} ${YELLOW}]=------------------- ${NC}"
echo -e "    \e[032;1m 5\e[0m\e[037;1m)\e[0m ADD SUBDOMAIN HOST FOR VPS"
echo -e "    \e[032;1m 6\e[0m\e[037;1m)\e[0m RENEW CERTIFICATE XRAY"
echo -e "    \e[032;1m 7\e[0m\e[037;1m)\e[0m AUTOBACKUP DATA VPS"
echo -e "    \e[032;1m 8\e[0m\e[037;1m)\e[0m BACKUP DATA VPS"
echo -e "    \e[032;1m 9\e[0m\e[037;1m)\e[0m RESTORE DATA VPS"
echo -e "   \e[032;1m 10\e[0m\e[037;1m)\e[0m LIMIT BANDWITH SPEED SERVER"
echo -e "   \e[032;1m 11\e[0m\e[037;1m)\e[0m CHECK USAGE OF VPS RAM" 
echo -e "   \e[032;1m 12\e[0m\e[037;1m)\e[0m REBOOT VPS"
echo -e "   \e[032;1m 13\e[0m\e[037;1m)\e[0m SPEEDTEST VPS"
echo -e "   \e[032;1m 14\e[0m\e[037;1m)\e[0m INFORMATION DISPLAY SYSTEM" 
echo -e "   \e[032;1m 15\e[0m\e[037;1m)\e[0m INFO SCRIPT AUTO INSTALL"
echo -e "   \e[032;1m 16\e[0m\e[037;1m)\e[0m CLEAR LOG VPS"
echo -e "   \e[032;1m 17\e[0m\e[037;1m)\e[0m CEK BANDWIDTH VPS"
echo -e " ${YELLOW} -------------------------------------------------------- ${NC}"
echo -e "      \e[032;1m x\e[0m\e[037;1m)\e[0m   EXIT"
echo -e " ${YELLOW} -------------------------------------------------------- ${NC}"
echo -e " ${YELLOW} ======================================================== ${NC}"
echo -e ""
echo -e "     Select From Options"
read -p "     [1-17 or type x to exit the menu] : " menu
echo -e ""
case $menu in
